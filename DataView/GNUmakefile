../build/dataview_FbTreeModel.o: ./FbTreeModel.cpp
	$(CXX) -c -o $@ $(DATAVIEW_CXXFLAGS) $(CPPDEPS) $<

../build/dataview_TestMain.o: ./TestMain.cpp
	$(CXX) -c -o $@ $(DATAVIEW_CXXFLAGS) $(CPPDEPS) $<

../build/dataview_TestApp.o: ./TestApp.cpp
	$(CXX) -c -o $@ $(DATAVIEW_CXXFLAGS) $(CPPDEPS) $<

