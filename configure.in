dnl Process this file with autoconf to produce a configure script.

AC_PREREQ(2.59)

AC_INIT([MyRuLib],[0.23.1],[mail@lintest.ru],[myrulib],[http://lintest.ru/pub/])

AC_CONFIG_SRCDIR([MyRuLib/MyRuLibApp.cpp])
AC_CONFIG_SRCDIR([autoconf_inc.m4])

AC_CANONICAL_BUILD
AC_CANONICAL_HOST
AC_CANONICAL_TARGET

AM_OPTIONS_WXCONFIG

dnl Checks for programs.
AC_PROG_AWK
AC_PROG_INSTALL
AC_PROG_LN_S
AC_PROG_RANLIB
AC_PROG_CC
AC_PROG_CXX
AC_PROG_CXXCPP

dnl AC_PROG_INTLTOOL

AM_PATH_WXCONFIG(2.8.10, WXFOUND=1)

if test "$WXFOUND" != 1; then
    AC_MSG_ERROR([
        Please check that wx-config is in path, the directory
        where wxWindows libraries are installed (returned by
        'wx-config --libs' command) is in LD_LIBRARY_PATH or
        equivalent variable and wxWindows is version 2.8.10 or above.
    ])
fi

AC_ARG_ENABLE(expat,
              [  --enable-expat          Use buildin Expat library?],
              USE_EXPAT="$enableval", USE_EXPAT="no")

if test $USE_EXPAT = no ; then 
	AC_CHECK_HEADER(expat.h,AC_CHECK_LIB(expat,XML_ParserCreate,USE_EXPAT="no",USE_EXPAT="yes"),USE_EXPAT="yes")
fi

if test $USE_EXPAT = yes ; then 
  EXPAT_STATIC=1
  AC_MSG_WARN([Expat: use buildin.])
else
  EXPAT_STATIC=0
  AC_MSG_WARN([Expat: use system.])
fi

AC_ARG_ENABLE(sqlite,
              [  --enable-sqlite         Use buildin SQLite3 library?],
              USE_SQLITE="$enableval", USE_SQLITE="no")

if test $USE_EXPAT = no ; then 
  AC_CHECK_HEADER(sqlite3.h, AC_CHECK_LIB(sqlite3, sqlite3_open,USE_SQLITE="no",USE_SQLITE="yes"),USE_SQLITE="yes")
fi

if test $USE_SQLITE = yes ; then 
  SQLITE_STATIC=1
  SQLITE_INCLUDE="SQLite3"
  AC_MSG_WARN([SQLite3: use buildin.])
else
  SQLITE_STATIC=0
  AC_MSG_WARN([SQLite3: use system.])
fi

AC_ARG_ENABLE(locale,
              [  --enable-locale         Include locale files into executable?],
              USE_LOCALE="$enableval", USE_LOCALE="no")

if test $USE_LOCALE = yes ; then 
  INCLUDE_LOCALE=1
else
  INCLUDE_LOCALE=0
fi

AC_BAKEFILE([m4_include(autoconf_inc.m4)])

AC_CONFIG_FILES([
         Makefile
         ])

AC_OUTPUT
